@model IEnumerable<ContactManager.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a type="button" class="btn btn-warning" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Contacts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => person.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Email)
                </td>                
                <td>
                    <table>                       
                        <tbody>
                            @foreach (var contact in person.Contacts)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => contact.CountryCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => contact.Number)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@person.Id">Edit</a> |
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@person.Id">Details</a> |
                    <a  type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@person.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
